<!DOCTYPE html>
<html>
  <head>
    <title>Myslacker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'MySlacker', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <ul class="nav navbar-nav pull-right">
                <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
                <li><%= button_to 'Log Out', logout_path, method: :delete, class: 'btn btn-danger', type: 'button' %></li>
              </ul>
            <% else %>
              <ul class="nav navbar-nav">
                <li><%= button_to 'Login', '/auth/gitlab', data: {turbo: false}, class: 'btn btn-primary', type: 'button' %></li>
              </ul>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
